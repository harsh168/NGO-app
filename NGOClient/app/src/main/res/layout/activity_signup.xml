<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.SignupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50sp"
            android:hint="Name"
            android:layout_marginBottom="20sp"
            android:id="@+id/etName"/>
        <EditText
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etName"
            android:layout_centerHorizontal="true"
            android:hint="Email"
            android:id="@+id/etEmail"
            android:layout_marginBottom="20sp"
            />
        <EditText
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEmail"
            android:layout_centerHorizontal="true"
            android:hint="Password"
            android:id="@+id/etPass"
            android:layout_marginBottom="20sp"
            />
        <EditText
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPass"
            android:layout_centerHorizontal="true"
            android:hint="Confirm Password"
            android:id="@+id/etCPass"
            android:layout_marginBottom="20sp"
            />
        <EditText
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCPass"
            android:layout_centerHorizontal="true"
            android:hint="Contact number"
            android:id="@+id/etPh"
            android:layout_marginBottom="20sp"
            />
        <EditText
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPh"
            android:layout_centerHorizontal="true"
            android:hint="Date Of Birth"
            android:id="@+id/etDob"
            android:layout_marginBottom="20sp"
            />
        <Spinner
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etDob"
            android:layout_centerHorizontal="true"
            android:id="@+id/spGender"
            android:layout_marginBottom="40sp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Update"
            android:layout_below="@id/spGender"
            android:layout_centerHorizontal="true"
            android:id="@+id/btReg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Already A User? Login Here"
            android:layout_below="@id/btReg"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:id="@+id/txtLogin"/>

    </RelativeLayout>

</ScrollView>
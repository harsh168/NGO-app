<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add NGO"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19sp"
            android:id="@+id/txtReg"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtReg"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etNGOname"
            android:hint="NGO Name"
            android:layout_marginTop="10sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etNGOname"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etNgoemail"
            android:hint="Ngo Email"
            android:layout_marginTop="10sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etNgoemail"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etMobile"
            android:hint="Mobile Number"
            android:layout_marginTop="10sp"/>




        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etMobile"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etAdd"
            android:hint="Address"
            android:layout_marginTop="10sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAdd"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etCity"
            android:hint="City"
            android:layout_marginTop="10sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCity"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etState"
            android:hint="State"
            android:layout_marginTop="10sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etState"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etPin"
            android:hint="Pincode"
            android:layout_marginTop="10sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPin"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etDescription"
            android:hint="Pincode"
            android:layout_marginTop="10sp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etDescription"
            android:layout_centerHorizontal="true"
            android:width="300sp"
            android:id="@+id/etType"
            android:layout_marginTop="10sp"/>
























        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Already Have An Account?"
            android:id="@+id/txtSign"
            android:layout_below="@id/etType"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btLogin"
            android:layout_marginTop="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtSign"
            android:hint="Register"/>
    </RelativeLayout>
</ScrollView>